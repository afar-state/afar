{
  "name": "state",
  "$schema": "https://www.unpkg.com/nx/schemas/project-schema.json",
  "sourceRoot": "libs/state/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/state/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "build:exports": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/state",
        "main": "libs/state/src/index.ts",
        "tsConfig": "libs/state/tsconfig.lib.json",
        "assets": [
          "libs/state/*.md",
          "libs/state/LICENCE"
        ]
      }
    },
    "build": {
      "executor": "@nrwl/rollup:rollup",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/state",
        "compiler": "tsc",
        "format": [
          "cjs",
          "esm"
        ],
        "deleteOutputPath": false,
        "generateExportsField": false,
        "main": "libs/state/index.ts",
        "tsConfig": "libs/state/tsconfig.lib.json",
        "project": "libs/state/package.json",
        "rollupConfig": "tools/configs/rollup.lib.config.cjs"
      },
      "dependsOn": [
        "build:exports"
      ]
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/state/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  }
}
